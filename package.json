{
  "name": "3-way-spades-server",
  "version": "1.0.0",
  "description": "3 player spades server and web app",
  "main": "index.js",
  "scripts": {
    "build": "npm run test && npm run lint && tsc",
    "dev": "nodemon --watch src -e ts dev.js",
    "lint": "standardx --fix src/**/*.ts",
    "test": "jest",
    "test:dev": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/johnomalley/3-way-spades-server.git"
  },
  "keywords": [
    "spades",
    "typescript",
    "node"
  ],
  "author": "John O'Malley",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johnomalley/3-way-spades-server/issues"
  },
  "homepage": "https://github.com/johnomalley/3-way-spades-server#readme",
  "devDependencies": {
    "@types/aws-lambda": "~8.10.51",
    "@types/aws-serverless-express": "~3.3.3",
    "@types/body-parser": "~1.19.0",
    "@types/cors": "~2.8.6",
    "@types/express": "~4.17.6",
    "@types/jest": "~25.2.3",
    "@types/lodash": "~4.14.152",
    "@types/node": "~12.6.4",
    "@types/randomstring": "~1.1.6",
    "@typescript-eslint/eslint-plugin": "~3.0.0",
    "@typescript-eslint/parser": "~3.0.0",
    "jest": "~26.0.1",
    "nodemon": "~2.0.4",
    "standardx": "~5.0.0",
    "ts-jest": "~26.0.0",
    "ts-node": "~8.10.1",
    "typescript": "~3.9.3"
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    },
    "overrides": [
      {
        "files": [
          "**/test/**/*.ts"
        ],
        "globals": {
          "jest": true,
          "describe": true,
          "beforeEach": true,
          "afterEach": true,
          "it": true,
          "expect": true
        }
      }
    ]
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "dependencies": {
    "aws-sdk": "~2.682.0",
    "aws-serverless-express": "~3.3.8",
    "body-parser": "~1.19.0",
    "cors": "~2.8.5",
    "delay": "~4.3.0",
    "express": "~4.17.1",
    "lodash": "~4.17.15",
    "moment": "~2.26.0",
    "npm": "~6.14.5",
    "randomstring": "~1.1.5"
  }
}
